<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= advertisement.title %></h1>
				<% if(currentUser && currentUser.isAdmin()) { %>
				<!-- Move the edit and destroy buttons inside of a conditional so they only render if the currentUser is an admin. -->
				<a href="/advertisements/<%= advertisement.id %>/edit" class="btn btn-warning">Edit</a>
				<form style="display:initial" action="/advertisements/<%= advertisement.id %>/destroy" method="post">
       		<button type="submit" class="btn btn-danger">Delete</button>
     		</form>
   	<% } %>

      <p><%= advertisement.description %></p>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
